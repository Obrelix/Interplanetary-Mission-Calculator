        <StackPanel Orientation="Horizontal"  Grid.Row="1" Margin="20"    >


                <StackPanel>

                    <Grid x:Name="grdTotalInfo">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15*"/>
                            <RowDefinition Height="15*"/>
                        </Grid.RowDefinitions>

                        <Rectangle  RadiusY="10" RadiusX="10" Grid.RowSpan="2" Grid.ColumnSpan="3">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>

                        <TextBlock Text="Δv Budget" FontSize="12" Grid.Column="0" Foreground="#FFFF3A00" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <TextBlock Text="Tranfer Time" Grid.Column="0" Grid.Row="1" FontSize="12" Foreground="#FFFFDC00" Margin="0" HorizontalAlignment="Center" />

                        <Viewbox  Grid.Row="0" Grid.Column="2" Width="80">
                            <TextBlock x:Name="textBlockTotalDV" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#FFFF3A00" Margin="0"/>
                        </Viewbox>

                        <Viewbox Grid.Row="1" Grid.Column="2" Width="80">
                            <TextBlock x:Name="textBlockTotaTime"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#FFFFDC00" Margin="0"  />
                        </Viewbox>
                    </Grid>


                    <Grid x:Name="grdPlanetSelection" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3"/>
                            <ColumnDefinition Width="100*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="100*"/>
                            <RowDefinition Height="100*"/>
                        </Grid.RowDefinitions>

                        <Rectangle RadiusX="10" RadiusY="10" Grid.ColumnSpan="2" Margin="0" Grid.RowSpan="5">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="#FF052F3C" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>

                        

                    </Grid>
                <Grid x:Name="grdRouteInfo" VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>

                </Grid>
            </StackPanel>
            
            <Grid x:Name="grdPlanetInfo" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="3"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>

                <Rectangle RadiusX="10" RadiusY="10" Grid.RowSpan="6" Grid.ColumnSpan="4" >
                    <Rectangle.Fill>
                        <SolidColorBrush Color="#FF052F3C" Opacity="0.5"/>
                    </Rectangle.Fill>
                </Rectangle>


            </Grid>
            
            
        </StackPanel>

    </Grid>

</Page>
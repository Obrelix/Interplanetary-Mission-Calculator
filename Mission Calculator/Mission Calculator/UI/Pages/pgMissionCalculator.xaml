      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mission_Calculator.Pages"
       mc:Ignorable="d" 
      d:DesignHeight="745" d:DesignWidth="850"
     Title="Mission Calculator" x:Name="Main" Loaded="Main_Loaded" MinHeight="745" MinWidth="800">

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="600*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>


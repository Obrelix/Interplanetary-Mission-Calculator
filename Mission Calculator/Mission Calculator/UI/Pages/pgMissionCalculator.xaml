        <StackPanel x:FieldModifier="public" x:Name="pnlParent" Orientation="Horizontal"  Grid.Row="1" Margin="20"    >


            <StackPanel x:FieldModifier="public" x:Name="pnlLeft">

                <Grid x:FieldModifier="public" x:Name="grdTotalInfo" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>

                        <Rectangle  RadiusY="10" RadiusX="10" Grid.RowSpan="4" Grid.ColumnSpan="5">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>

                        <TextBlock Text="Δv Budget" FontSize="18" Grid.Column="1" Grid.Row="1"  Foreground="#FFFF3A00" Margin="0" TextAlignment="Center" />
                        <TextBlock Text="Tranfer Time" FontSize="18" Grid.Column="1" Grid.Row="2"  Foreground="#FFFFDC00" Margin="0" TextAlignment="Center" />

                        <Viewbox  Grid.Row="1" Grid.Column="3" Width="100">
                        <TextBlock x:FieldModifier="public" x:Name="txtDVBudget" Foreground="#FFFF3A00" Margin="0"/>
                        </Viewbox>

                        <Viewbox Grid.Row="2" Grid.Column="3" Width="100">
                        <TextBlock x:FieldModifier="public" x:Name="txtTotaTime" Foreground="#FFFFDC00" Margin="0"  />
                        </Viewbox>
                        
                    </Grid>


                <Grid x:Name="grdPlanetSelection" x:FieldModifier="public">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="0*"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>

                        <Rectangle RadiusX="10" RadiusY="10" Grid.ColumnSpan="3" Margin="0" Grid.RowSpan="7">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="#FF052F3C" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>

                    </Grid>
                
                <Grid x:Name="grdRouteInfo" x:FieldModifier="public">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="0*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="100*"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>

                </Grid>
            </StackPanel>

            <Grid x:Name="grdPlanetInfo" x:FieldModifier="public" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>

                <Rectangle RadiusX="10" RadiusY="10" Grid.RowSpan="6" Grid.ColumnSpan="4" >
                    <Rectangle.Fill>
                        <SolidColorBrush Color="#FF052F3C" Opacity="0.5"/>
                    </Rectangle.Fill>
                </Rectangle>


            </Grid>
            
            
        </StackPanel>

    </Grid>

</Page>